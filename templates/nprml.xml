<nprml version="0.94">
    <list>
        <story>
            <link type="html">{{ link }}</link>
            <title>
                <![CDATA[
                {{ title }}
                ]]>
            </title>
            <subtitle>
                {{ subtitle }}
            </subtitle>
            <teaser>
                <![CDATA[
                <p>{{ teaser }}</p>
                ]]>
            </teaser>
            <storyDate>{{ storyDate }}</storyDate>
            <pubDate>{{ pubDate }}</pubDate>
            <organization orgId="692" orgAbbr="WVPS">
                <name>WVPS-FM</name>
                <website>http://www.vpr.net</website>
            </organization>
            {% for tagId in tags %}
                <parent id="{{ tagId }}" type="tag">
                </parent>
            {% endfor %}

            {% for byline in bylines %}
            <byline id="{{ byline }}">
            </byline>
            
            <image type="primary" src="{{ image.src }}" height="{{ image.height }}" width="{{ image.width }}" hasBorder="false">
                <producer>{{ image.producer }}</producer>
                <provider url="http://www.vpr.net">VPR</provider>
            </image>

            <text>
                <paragraph num="1">
                    <![CDATA[
                    {{ teaser }}
                    ]]>
                </paragraph>
            </text>


        </story>
    </list>
</nprml>
